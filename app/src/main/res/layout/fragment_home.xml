<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/fragment_home.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Balance Display Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/purple_gradient_background"
        android:padding="24dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp"
        android:elevation="4dp">

        <TextView
            android:id="@+id/primaryBalanceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Primary Account Balance"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/primaryBalanceAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.00"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Action Box Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/action_box_background"
        android:padding="16dp"
        android:gravity="center"
        android:elevation="1dp"
        android:layout_marginBottom="16dp">

        <!-- Add Transaction Button -->
        <LinearLayout
            android:id="@+id/btnAddTransaction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/purple_button_background"
            android:clickable="true"
            android:elevation="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_baseline_attach_money_24"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Add Transaction"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Add Balance Account Button -->
        <LinearLayout
            android:id="@+id/btnAddBalanceAccount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center"
            android:background="@drawable/purple_button_background"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:focusableInTouchMode="true"
            >

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_baseline_account_balance_24"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Add Balance Account"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Add Savings Goal Button -->
        <LinearLayout
            android:id="@+id/btnAddSavingsGoal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center"
            android:background="@drawable/purple_button_background"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_baseline_flag_circle_24"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Add Savings Goal"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
